# Base de datos (PostgreSQL). Obligatorio.
DATABASE_URL=

# Clave secreta para firmar y verificar JWTs. Obligatorio. Usar una cadena larga y aleatoria en producción.
JWT_SECRET=

# Expiración del access token en segundos. Opcional. Por defecto: 3600 (1h).
# JWT_ACCESS_EXPIRES_IN=3600

# Puerto del servidor. Opcional. Por defecto: 3000.
# PORT=3000

# Nombre de la app (aparece en mensajes OTP). Obligatorio.
APP_NAME=

# Twilio (SMS / WhatsApp). Obligatorios para envío real de OTP.
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
